{
  "Description": "Docker-Plugin-Volume-Test",
  "Documentation": "https://github.com/dlbogdan/docker-plugin-volume-test",
  "Interface": {
    "Types": ["docker.volumedriver/1.0"],
    "Socket": "docker-plugin-volume-test.sock"
  },
  "Entrypoint": ["/docker-plugin-volume-test"],

  "Env": [
    {
      "Name": "ROOT_PATH",
      "Description": "Root path for the plugin volumes",
      "Settable": ["value"],
      "Value": "/tmp/docker-plugin-volume-test/"
    },
    {
      "Name": "DEBUG",
      "Description": "Enable debug mode",
      "Settable": ["value"],
      "Value": "false"
    },
    {
      "Name": "SCOPE",
      "Description": "Scope of the mountpoint (global or local)",
      "Settable": ["value"],
      "Value": "global"
    }
  ],

  "Linux": {
    "Capabilities": [
      "CAP_SYS_ADMIN"
    ]
  },
  "Mounts": [
    {
      "Type": "bind",
      "Source": "/run/docker/plugins",
      "Destination": "/run/docker/plugins"
    }
  ]
}
