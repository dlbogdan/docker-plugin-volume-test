{
  "Description": "My Volume Plugin",
  "Documentation": "https://github.com/yourusername/my-volume-plugin",
  "Interface": {
    "Types": ["docker.volumedriver/1.0"],
    "Socket": "my-plugin.sock"
  },
  "Entrypoint": ["/my-plugin"],

  "Env": [
    {
      "Name": "ROOT_PATH",
      // "Settable" can allow users to override the value at install time
      "Settable": ["value"],
      "Value": "/var/lib/myvolplugin"
    }
  ],

  "Linux": {
    "Capabilities": [
      // Often need CAP_SYS_ADMIN for mounting
      "CAP_SYS_ADMIN"
    ]
  },
  "Mounts": [
    {
      "Type": "bind",
      "Source": "/run/docker/plugins",
      "Destination": "/run/docker/plugins"
    }
    // might need more mounts if performing real mounts, e.g. /dev, /etc, etc.
  ]
}
